<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://api.fontshare.com/v2/css?f[]=general-sans@400&f[]=clash-display@400&f[]=switzer@400&f[]=satoshi@400&f[]=clash-grotesk@400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Work+Sans&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/fd5fe3c9e4.js" crossorigin="anonymous"></script>
    <style type="text/css">
    *{
        margin: 0;
        padding: 0;
        
        }
        body {

        font-family: 'satoshi',sans-serif;

        }
        #top{
        height: 400px;
        width: 100%;
        background-image:url("mist.webp");
        background-size: cover;
        /* background-position: center;*/
        background-repeat: no-repeat;

        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;

        color: whitesmoke;

        }
        .bottom{
        height: 40%;
        width: 100%;
        background-color:#DAEAF1;

        position:absolute;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: space-around;
        text-align: center;

        }
        .bottom .two span{
        font-size: 20px;
        font-weight: normal;
        }
        /*
        .bottom{
        text-align: center;
        }

        */
        .one i{
          font-size:40px;
          color: #47B5FF;
        }


        @media (max-width:700px){
            .bottom {

                height: 1600px;
                display: flexbox;
                justify-content: space-around;
                flex-direction: column;
                position: relative;
            }
            .one {
                width: 50%;
                margin: auto;
                border:2px solid black;
                border-radius: 10px;
                padding: 30px;
            }


        }

    </style>
</head>
<body>


    <div id="top">


        <div class="first">
            <h1><%= currentTemp%><sup> o</sup>C</h1>
            <br><br>
            <h2 style="display:none;"><%=currentTime%></h2>


        </div>
        <div class="second">
            <h1><%=cityName%></h1>
            <br>
            <h1><%=countryCode%></h1>
            <br>
            <h1><%=condition%></h1>
        </div>
    </div>
    <div class="bottom">
        <div class="one">
          <img src="<%=ImgUrl%>" width="100%" alt="">
          <b> <%= weatherDescription %></b>
        </div>
        <div class="one">
            <h2> <%=maxTemp%> <sup>o</sup>C - <span>Max</span></h2>
            <br><br>
            <h2><%=minTemp%><sup>o</sup>C - <span>Min</span> </h2>


        </div>
        <div class="one">
            <i class="material-icons">opacity</i><br><br>
            <h3>Humidity</h3>
            <br>
            <hr>
            <br>
            <h2> <%=humidity%></h2>
        </div>
        <div class="one">
            <i class="material-icons">insights</i><br><br>
            <h3>Pressure</h3>
            <br>
            <hr>
            <br>
            <h2><%=pressure%></h2>
        </div>
        <div class="one">
            <i class="material-icons">air</i><br><br>
            <h3>Wind Speed</h3>
            <br>
            <hr>
            <br>
            <h2><%=windSpeed%></h2>

        </div>
    </div>

    <script type="text/javascript">
      var TopId = document.getElementById("top");

      let Condition = '<%-condition%>';
       if(Condition=="Clouds") {
         TopId.style.backgroundImage = "url('fewclouds.webp')";
         TopId.style.color = "black";

       }
       else if(Condition=="Clear"){
         TopId.style.backgroundImage="url('clearsky.webp')";
         TopId.style.color = "black";
       }
       else if(Condition=="Thunderstorm"){
         TopId.style.backgroundImage="url('thunderstorm.webp')";
       }
       else if(Condition=="Snow"){
         TopId.style.backgroundImage="url('snow.jpeg')";
       }
       else if(Condition=="Rain"){
         TopId.style.backgroundImage="url('showerrain.jpeg')";
       }
       else if(Condition=="Atmosphere"){
         TopId.style.backgroundImage="url('mist.webp')";
       }
       else {
         TopId.style.backgroundImage="url('mist.webp')";
       }



    </script>



</body>
</html>
